<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Rim-Effect: Asari and Reapers</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

			<!-- Military -->
			<li Class="PatchOperationAddModExtension">
				<xpath>/Defs/PawnKindDef[
				defName="RE_AsariMarine" or
				defName="RE_AsariMarineSniper" or
				defName="RE_AsariCommando" or
				defName="RE_AsariCommandoSpecialist" or
				defName="RE_AsariJusticar" or
				defName="RE_AsariAdept" or
				defName="RE_ArdatYakshi"
				]</xpath>
				<value>	
					<li Class="CombatExtended.LoadoutPropertiesExtension">	
						<primaryMagazineCount>
							<min>5</min>
							<max>9</max>
						</primaryMagazineCount>
						<sidearms>
						<li>
							<generateChance>0.4</generateChance>
							<sidearmMoney>
								<min>100</min>
								<max>300</max>
							</sidearmMoney>
							<weaponTags>
								<li>RE_AsariGunLight</li>
							</weaponTags>
							<magazineCount>
							<min>2</min>
							<max>4</max>
							</magazineCount>							
						</li>
						<li>
							<generateChance>0.2</generateChance>
							<sidearmMoney>
								<min>10</min>
								<max>100</max>
							</sidearmMoney>
							<weaponTags>
							<li>GrenadeSmoke</li>
							<li>CE_GrenadeFlashbang</li>
							</weaponTags>
							<magazineCount>
							<min>0</min>
							<max>1</max>
							</magazineCount>
						</li>
						</sidearms>
					</li>
				</value>
			</li>

			<!-- Civilian -->
			<li Class="PatchOperationAddModExtension">
				<xpath>/Defs/PawnKindDef[
				defName="RE_AsariExplorer" or
				defName="RE_AsariOfficial" or
				defName="RE_AsariTrader" or
				defName="RE_Matriarch" or
				defName="RE_AsariScientist"]</xpath>
				<value>	
					<li Class="CombatExtended.LoadoutPropertiesExtension">	
						<primaryMagazineCount>
							<min>3</min>
							<max>6</max>
						</primaryMagazineCount>
					</li>
				</value>
			</li>

			</operations>
		</match>
	</Operation>

</Patch>